{
    "manifest_version": 3,
    "name": "BlinkNow",
    "version": "1.0",
    "description": "Reminds you to blink at regular intervals to reduce eye strain.",
    "permissions": ["storage"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  